{
  "babel": {
    "presets": [
      "es2015",
      "react"
    ],
    "sourceMaps": "inline"
  },
  "scripts": {
    "build": "babel src -d lib && webpack --color --progress",
    "build:w": "npm run build && concurrent \"babel src -d lib --watch\" \"webpack --color --watch\""
  },
  "devDependencies": {
    "babel-cli": "^6.4.5",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "concurrently": "^1.0.0",
    "highlight.js": "^9.1.0",
    "react": "^0.14.7",
    "react-addons-update": "^0.14.7",
    "react-dom": "^0.14.7",
    "react-highlight": "^0.6.1",
    "webpack": "^2.0.6-beta"
  }
}
